-content_for :title do
  =t(".title#{@page>1 ? '_2' : ''}",page:@page)
-content_for :description do
  =t(".description#{@page>1 ? '_2' : ''}",page:@page)

=content_for(:next_page) do
  =special_page_link(@translators,:next_page)
=content_for(:previous_page) do
  =special_page_link(@translators,:previous_page)

%main.page
  .container-fluid
    .panel.bg-light

      %h1.heading=t(".h1#{@page>1 ? '_2' : ''}",page:@page)

      .anime-list
        -@translators.each do |translator|
          %a.anime-list-item{href: translator_path(translator.simple_link)}=translator.title

      =paginate @translators
