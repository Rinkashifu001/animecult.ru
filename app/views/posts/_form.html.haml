.row
  .column.small-8
    = form_for @post, multipart:true do |f|
      - if @post.errors.any?
        #error_explanation
          %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
          %ul
            - @post.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label :title
        = f.text_field :title
      .field
        = f.label :body
        = f.text_area :body
      .field
        = f.label :img
        = f.text_field :img
      -if @post.image_stored?
        =image_tag @post.image.url
      -else
        =image_tag 'http://c.frau-technica.ru/thumb/st1/fit/wm/800/650/d1faf429bdddb49dd043325c8d1b2e7f/3afa667a645eecad830814a0cbe384c235d6bbbe619614ea51bbfc4234a0143f.jpg'
      .actions
        = f.submit 'Save'